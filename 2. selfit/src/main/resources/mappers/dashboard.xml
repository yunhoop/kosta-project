    <select id="getBmr" parameterType="int" resultType="com.oopsw.selfit.dto.Member">
        SELECT MEMBER_ID, GENDER, BIRTHDAY, HEIGHT, WEIGHT
        FROM MEMBER
        WHERE MEMBER_ID = #{memberId}
